
<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-section page-section-gap">
        <t-button type="primary">按钮</t-button>
        <t-button t-class="external-class" theme="primary" icon="app" variant="outline" block disabled="{{disabled}}"
    >带图标按钮</t-button>
        <radio-group name="issys">
          <label><radio value="sysuser"/>系统管理员</label>
          <label><radio value="user"/>普通用户</label>
        </radio-group>
      </view>
      <view class="page-section">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="username" placeholder="请输入用户名" />
            </view>
          </view>
        </view>
      </view>
      <view class="page-section">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd" style="margin: 30rpx 0" >
              <input class="weui-input" name="password" placeholder="请输入密码" />
            </view>
          </view>
        </view>
      </view>

      <view class="btn-area">
        <button style="margin: 30rpx 0" type="primary" formType="submit">Submit</button>
        <button style="margin: 30rpx 0" formType="reset">Reset</button>
      </view>
    </form>
  </view>

</view>